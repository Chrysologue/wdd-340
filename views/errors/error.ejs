<%# Assignment 3, Basig Error Handling activity %> 
<% if (title) { %>
  <div class="error-container">
    <div class="error-content">
      <h1><%= title %></h1>
      <p><%- message %></p>
    </div>

    <% if (title == "404") { %>
      <img src="/images/not-found1.svg" alt="<%- message %>">
    <% } else { %>
      <img src="/images/not-found.svg" alt="<%- message %>">
    <% } %>
  </div>
<% } %>
