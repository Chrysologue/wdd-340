<% if (title) { %>
<h1 class="add-classification-title"><%= title %></h1>
<% }%>

<%- messages() %> 

<% if (errors) { %>
<ul class="error">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<div class="login-register-container">

  <form id="classificationForm" action="/inv/classification" method="post">

    <label for="classificationName">Classification Name</label>

    <div>
        <span>Name must be alphabetic only</span>
    </div>

    <input type="text" name="classification_name" id="classificationName" required pattern="^[A-Za-z]+$" value="<%- locals.classification_name %>">

    <button type="submit">Add Classification</button>
  </form>
</div>
