<h1 class="management-title"><%= title %></h1>

<div class="management-content">
  <h2 class="welcome-text">Welcome <%= firstName %></h2>
  <%- messages() %>

  <% if (errors) { %>
    <ul class="form-errors">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <a href="/account/update/<%= accountData.account_id %>" class="button-link">Update Account Information</a>

  <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
    <h3 class="section-heading">Inventory Management</h3>
    <a href="/inv" class="button-link secondary">Manage Inventory</a>
  <% } %>
</div>
